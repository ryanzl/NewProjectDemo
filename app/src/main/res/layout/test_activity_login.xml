<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shape_bg_edittext">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="手机号"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="@color/black_light"
                android:textColorHint="@color/material_grey_500"
                android:textSize="@dimen/textsize_14" />

            <ImageView
                android:id="@+id/iv_clear_phone"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="14dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_bg_edittext">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="@color/black_light"
                android:textColorHint="@color/material_grey_500"
                android:textSize="@dimen/textsize_14" />

            <ImageView
                android:id="@+id/iv_clear_password"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="14dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_do_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/selector_bg_button_green"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16" />

    </LinearLayout>

</LinearLayout>
